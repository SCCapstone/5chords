<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/fragment_settings_page"
              tools:context=".com.five_chords.chord_builder.fragment.SettingsPageFragment">

    <!-- Title -->
    <TextView style="@style/AppText"
        android:id="@+id/textview_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="@dimen/text_size_title"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true" />

    <!-- Separator -->
    <View style="@style/VerticalSeparator"
          android:id="@+id/settings_top_separator"
          android:layout_below="@id/textview_settings_title"/>

    <!-- settings content -->
    <FrameLayout
        android:id="@+id/settings_content"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_top_separator"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <!--<ListView-->
        <!--android:id="@+id/settings_content"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/settings_top_separator"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"/>-->

</RelativeLayout>
