<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.five_chords.chord_builder.com.five_chords.chord_builder.activity.HelpPage">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView style="@style/AppText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basics_for_playing"
        android:textSize="@dimen/text_size_large"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

        <TextView style="@style/AppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_page_content"
            android:textSize="@dimen/text_size_medium"
            android:singleLine="false"/>

        <TextView style="@style/AppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/contact_us"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>

        <TextView style="@style/AppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/contact_us_description"
            android:textSize="@dimen/text_size_medium"
            android:singleLine="false" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/contact_dev"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:background="@drawable/button_selector"
                android:ellipsize="end"
                android:text="@string/contact_developers"
                android:textSize="@dimen/text_size_small"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/contact_pro"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:background="@drawable/button_selector"
                android:ellipsize="end"
                android:text="@string/contact_professional_musician"
                android:textSize="@dimen/text_size_small"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button_done"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:background="@drawable/button_selector"
                android:onClick="backToMain"
                android:text="@string/done"
                android:textSize="@dimen/text_size_medium"
                android:textColor="#ffffff" />


        </LinearLayout>

</LinearLayout>

</ScrollView>
