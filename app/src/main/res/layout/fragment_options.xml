<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/fragment_check_options">

    <!-- Checkboxes for what types of chords to select -->
    <CheckBox
        android:id="@+id/checkbox_major_chords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:checked="true"
        android:text="@string/major_chords"/>

    <CheckBox
        android:id="@+id/checkbox_minor_chords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/minor_chords"/>

    <CheckBox
        android:id="@+id/checkbox_dominant_chords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dominant_chords"/>

    <!-- Separator -->
    <View style="@style/VerticalSeparator"/>

    <!-- Enable hints checkbox -->
    <Switch
        android:id="@+id/switch_hints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/enable_hints"/>

    <!-- Separator -->
    <View style="@style/VerticalSeparator"/>

    <!-- Clear Scores -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_clear_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/clear"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/button_clear_scores"
            android:layout_alignBottom="@id/button_clear_scores"
            android:text="@string/clear_scores"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        </TextView>

    </RelativeLayout>

    <!-- Done Button -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="done"
            android:onClick="closeOptionsDialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/button_done"
            android:layout_alignBottom="@id/button_done"
            android:text="Done"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        </TextView>

    </RelativeLayout>

</LinearLayout>