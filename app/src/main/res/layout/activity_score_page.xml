<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:id="@+id/scorePage"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="com.five_chords.chord_builder.Score"
                android:theme="@style/AppTheme">

    <!-- Button Bar layout -->
    <LinearLayout
        android:id="@+id/score_page_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <!-- Reset score button -->
        <Button
            android:id="@+id/button_score_page_score_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/clear_scores"
            android:background="@drawable/buttons"
            android:textColor="#ffffff"
            android:onClick="clearScores"
            />

        <!-- Done Button -->
        <Button
            android:id="@+id/button_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Done"
            android:background="@drawable/buttons"
            android:textColor="#ffffff"
            android:onClick="backToMain"/>

    </LinearLayout>

    <!-- Score Page Fragment -->
    <fragment
        android:id="@+id/score_activity_score_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:name="com.five_chords.chord_builder.com.five_chords.chord_builder.fragment.ScorePageFragment"
        tools:layout="@layout/fragment_score_page"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/score_page_button_bar">
    </fragment>

</RelativeLayout>
