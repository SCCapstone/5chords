<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/fragment_check_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

    <!-- Button to play the chord the user currently has selected on the sliders -->
    <Button style="?attr/buttonBarButtonStyle"
        android:id="@+id/button_playback_slider_chord"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="@string/preview"
        android:textSize="@dimen/text_size_small"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:padding="0dp" />

    <!-- Button to check the chord the user currently has selected on the sliders -->
    <Button style="?attr/buttonBarButtonStyle"
        android:id="@+id/button_check_user_chord"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="@string/check"
        android:textSize="@dimen/text_size_small"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:padding="0dp" />

</LinearLayout>