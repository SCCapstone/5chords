<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".com.five_chords.chord_builder.activity.SettingsChords">

    <!-- Back arrow -->
    <Button style="@style/AppText"
        android:id="@+id/textview_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="@string/back"
        android:textSize="@dimen/text_size_title"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:onClick="backToMain" />

    <!-- Title -->
    <TextView style="@style/AppText"
        android:id="@+id/textview_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsChords"
        android:textSize="@dimen/text_size_title"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true" />

    <!-- Separator -->
    <View style="@style/VerticalSeparator"
          android:id="@+id/settings_top_separator"
          android:layout_below="@id/textview_settings_title"/>

    <!-- Settings content -->
    <ListView
        android:id="@+id/settings_content"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_top_separator"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
