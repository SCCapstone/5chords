<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@drawable/wood"
              android:id="@+id/fragment_sliders"
              android:padding="0dp">

    <!-- Note selection sliders -->

    <!-- Root -->
    <com.five_chords.chord_builder.com.five_chords.chord_builder.view.SliderHintView
        android:id="@+id/slider_root_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <com.five_chords.chord_builder.com.five_chords.chord_builder.view.VerticalSeekBar
            android:id="@+id/slider_root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:indeterminate="false"
            android:thumb="@layout/seekbar_thumb"
            android:tag="@string/seek_bar_tag"
            android:background="@drawable/eq_slide_background"
            android:progressTint="#000000" />

    </com.five_chords.chord_builder.com.five_chords.chord_builder.view.SliderHintView>

    <!-- Third -->
    <com.five_chords.chord_builder.com.five_chords.chord_builder.view.SliderHintView
        android:id="@+id/slider_third_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <com.five_chords.chord_builder.com.five_chords.chord_builder.view.VerticalSeekBar
            android:id="@+id/slider_third"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:indeterminate="false"
            android:thumb="@layout/seekbar_thumb"
            android:tag="@string/seek_bar_tag"
            android:background="@drawable/eq_slide_background"
            android:progressTint="#000000" />
        <!--android:thumb="@drawable/abc_btn_radio_to_on_mtrl_015"-->

    </com.five_chords.chord_builder.com.five_chords.chord_builder.view.SliderHintView>

    <!-- Fifth -->
    <com.five_chords.chord_builder.com.five_chords.chord_builder.view.SliderHintView
        android:id="@+id/slider_fifth_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <com.five_chords.chord_builder.com.five_chords.chord_builder.view.VerticalSeekBar
            android:id="@+id/slider_fifth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:indeterminate="false"
            android:thumb="@layout/seekbar_thumb"
            android:tag="@string/seek_bar_tag"
            android:background="@drawable/eq_slide_background"
            android:progressTint="#000000" />

    </com.five_chords.chord_builder.com.five_chords.chord_builder.view.SliderHintView>

    <!-- Option -->
    <com.five_chords.chord_builder.com.five_chords.chord_builder.view.SliderHintView
        android:id="@+id/slider_option_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <com.five_chords.chord_builder.com.five_chords.chord_builder.view.VerticalSeekBar
            android:id="@+id/slider_option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:indeterminate="false"
            android:thumb="@layout/seekbar_thumb"
            android:tag="@string/seek_bar_tag"
            android:background="@drawable/eq_slide_background"
            android:progressTint="#000000" />

    </com.five_chords.chord_builder.com.five_chords.chord_builder.view.SliderHintView>


</LinearLayout>