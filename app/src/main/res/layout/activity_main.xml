
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
         android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
         android:paddingRight="@dimen/activity_horizontal_margin"
         android:paddingTop="@dimen/activity_vertical_margin"
         android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
         android:id="@+id/hello"
         android:background="@android:color/holo_red_dark">

<com.example.drea.helloworld.VerticalSeekBar
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:max="18"
        android:progress="1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/check"
        android:layout_toStartOf="@+id/check"
        android:layout_above="@+id/random" />

    <com.example.drea.helloworld.VerticalSeekBar
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:max="18"
        android:progress="1"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/root"
        android:layout_alignRight="@+id/random"
        android:layout_alignEnd="@+id/random" />

    <com.example.drea.helloworld.VerticalSeekBar
        android:id="@+id/fifth"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:max="18"
        android:progress="1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/chord"
        android:layout_alignStart="@+id/chord"
        android:layout_alignBottom="@+id/third" />

    <com.example.drea.helloworld.VerticalSeekBar
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:max="11"
        android:progress="1"
        android:layout_alignBottom="@+id/third"
        android:layout_toRightOf="@+id/chord"
        android:layout_toEndOf="@+id/chord"
        android:layout_alignTop="@+id/third" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random"
        android:id="@+id/random"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Rando" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="000"
        android:id="@+id/chord"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:layout_alignTop="@+id/random"
        android:layout_alignLeft="@+id/answer"
        android:layout_alignStart="@+id/answer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/check"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/random"
        android:layout_alignStart="@+id/random"
        android:onClick="check" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No"
        android:id="@+id/answer"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/check"
        android:layout_toEndOf="@+id/check"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chord"
        android:id="@+id/chordSlider"
        android:onClick="chordAgain"
        android:layout_alignBottom="@+id/check"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/answer"
        android:layout_below="@+id/chord"
        android:layout_toRightOf="@+id/answer" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/chord"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ToHelpPage" />/>

</RelativeLayout>
