<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.five_chords.chord_builder.AboutPage"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="About Us:"
            android:id="@+id/textView3"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are 5Chords!\nWe are students at the University of South Carolina working on our Capstone Computing Project. \nTogether We have developed an application that will help music students learn music theory and intonation without the skills required to play them perfectly. Our goal is to give music learners an easier method to learn music theory."
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by:\nDrea Zeagler\nZachary Askins\nKevin Hyun\nTheodore Stone"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:textSize="@dimen/text_size_medium" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="backToMain"
            android:text="Done"
            android:id="@+id/button_done"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttons"
            android:textColor="#ffffff"/>





    </LinearLayout>

</ScrollView>
