<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/MainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/application_background"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                tools:context=".StartPage">

    <TextView
        android:id="@+id/textview_start_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chord Builder"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textStyle="bold"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textview_start_page_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Chord Building App"
        android:layout_below="@id/textview_start_page_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textStyle="italic"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button6"
        android:layout_marginBottom="32dp"
        android:layout_alignLeft="@id/textview_start_page_title"
        android:layout_alignRight="@id/textview_start_page_title"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick = "backToMain" />

</RelativeLayout>
