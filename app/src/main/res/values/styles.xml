<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/wood</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Alert Dialog Theme-->
    <style name="AppAlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@drawable/wood</item>
        <item name="android:textColor">@color/vlt_gray</item>
    </style>

    <!-- Style for small tab text -->
    <style name="SmallTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Style for text -->
    <style name="AppText">
        <item name="android:textColor">@color/vlt_gray</item>
    </style>

    <!-- Style for a vertical separator in a ListView -->
    <style name="VerticalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#80080808</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style for the Vertical Seek Bars-->
    <style name="styleSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:background">@drawable/eq_slide_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">@dimen/slider_width</item>
        <item name="android:maxHeight">@dimen/slider_width</item>
        <item name="android:paddingLeft">@dimen/slider_padding</item>
        <item name="android:paddingRight">@dimen/slider_padding</item>
        <item name="android:progressDrawable">@android:color/transparent</item>
        <item name="android:indeterminate">false</item>
        <item name="android:thumb">@drawable/thumb_icon</item>
    </style>


</resources>
