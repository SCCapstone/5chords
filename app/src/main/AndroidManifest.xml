<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.five_chords.chord_builder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".MainActivity"
            android:label="Chord Builder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HelpPage"
            android:label="Help"
            android:parentActivityName="com.five_chords.chord_builder.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.five_chords.chord_builder.MainActivity" />
            </activity>

        <activity
            android:name=".Score$ScoreActivity"
            android:label="Score"
            android:parentActivityName="com.five_chords.chord_builder.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.five_chords.chord_builder.MainActivity" />
        </activity>

        <activity
            android:name=".StartPage"
            android:label="@string/title_activity_start_page"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".AboutPage"
            android:label="About"
            android:parentActivityName="com.five_chords.chord_builder.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.five_chords.chord_builder.MainActivity" />
        </activity>

        <activity
            android:name=".demo">
        </activity>

    </application>

</manifest>
